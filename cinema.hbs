<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>cinema</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div style=" text-align: center;">
        <h1 style="color: whitesmoke;">Entri Multiplex</h1>
    </div>
    <div class="container" style="display:flex; aline-item:center; justify-content:center;">
        <div>
            <label style="color: whitesmoke;">Select cinema:</label>
            <select class="form-control" id="movie">
                {{#each movies}}
                <option value="{{rate}}">{{name}}/Screen {{screenNo}} -Rs {{rate}}</option>
                {{/each}}
            </select>
        </div>
        <ul class="showcase" style="list-style-type: none; margin: 50px; margin-top:100px; display:flex;">
            <li style="text-align: center;">
                <div class="seat" style="margin:15px"></div>
                <small style="color: whitesmoke;">Available</small>
            </li>
            <li style="text-align: center;">
                <div class="seat selected" style="margin:15px"></div>
                <small style="color: whitesmoke;">Selected</small>
            </li>
            <li style="text-align: center;">
                <div class="seat occupied" style="margin:15px"></div>
                <small style="color: whitesmoke;">Occupied</small>
            </li>
        </ul>

        <div style="width: 350px;">
            <div class="screen" > 
                <img src="https://images.ottplay.com/images/posters-of-rrr-and-baahubali-2-632.jpg?impolicy=ottplay-20210210&width=1200&height=675" alt="">
            </div>
            <div class="row" id="screen1" style="visibility:hidden; display:none">
                {{#each screen1}}
                <div class="seat {{status}}" id="{{seatno}}"></div>
                {{/each}}
            </div>
            <div class="row" id="screen2" style="visibility:hidden; display:none">
                {{#each screen2}}
                <div class="seat {{status}}" id="{{seatno}}"></div>
                {{/each}}
            </div>
            <div class="row" id="screen3" style="visibility:hidden; display:none">
                {{#each screen3}}
                <div class="seat {{status}}" id="{{seatno}}"></div>
                {{/each}}
            </div>
        </div>

    </div>

    <div id="finalCost" style="display: none;text-align:center;">
        <p id="cost"></p>
    </div>



    <script src="script.js"></script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>