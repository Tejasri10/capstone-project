<body background="https://t3.ftcdn.net/jpg/03/02/04/06/360_F_302040655_IEH9RyDlu7LL8YCLjgL1IskhrpOlmlSv.jpg">
<div style="margin-left: 400px">
  <div class="container mt-5" style="position: center;" >
    <h2 style="color: whitesmoke; margin-left: 150px;">Login</h2>
    <div class="col-md-6">
    <form action="/login" method="post">
      <div class="form-group" >
        <label for="profile" style="color: white;">Profile ID</label>
        <input type="text"  class="form-control" id="profile"  aria-describedby="emailHelp" name='profile' 
          placeholder="Enter Profile ID">
      </div>
      <div class="form-group">
        <label for="password" style="color: white;">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <div style=" margin-top: 20px ">
      <p style="color: whitesmoke;">Don't have an accont?  <a href="http://localhost:3000/register">Sign Up</a></p>
</div>
</div>
</div>
</div>

